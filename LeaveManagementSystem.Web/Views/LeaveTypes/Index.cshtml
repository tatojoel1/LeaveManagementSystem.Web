@model IEnumerable<LeaveManagementSystem.Web.Data.LeaveType>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfDays)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfDays)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning m-1">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info m-1">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger m-1">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
